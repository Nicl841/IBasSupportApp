@page "/support-list"
@using IbasSupportApp.Models
@using IbasSupportApp.Services
@inject CosmosDbService CosmosDbService
@rendermode InteractiveServer

<PageTitle>Henvendelser</PageTitle>

<h3>Oversigt over henvendelser</h3>

@if (messages == null)
{
    <p><em>Indlæser...</em></p>
}
else if (messages.Count == 0)
{
    <p>Ingen henvendelser fundet.</p>
}
else
{
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Navn</th>
            <th>Email</th>
            <th>Telefon</th>
            <th>Kategori</th>
            <th>Beskrivelse</th>
            <th>Dato</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var msg in messages)
        {
            <tr>
                <td>@msg.name</td>
                <td>@msg.email</td>
                <td>@msg.phone</td>
                <td>@msg.category</td>
                <td>@msg.description</td>
                <td>@msg.date</td>
            </tr>
        }
        </tbody>
    </table>
}

@code {
    private List<SupportMessage>? messages;

    protected override async Task OnInitializedAsync()
    {
        // Hent alle beskeder (mock eller ægte)
        messages = await CosmosDbService.GetAllMessagesAsync();
    }
}